            <Switch
                android:id="@+id/switch_student_parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/len_8"
                android:layout_marginEnd="@dimen/len_8"
                android:gravity="center"
                android:textOff="@string/Label_parent"
                android:textOn="@string/Label_student"
                android:thumb="@animator/switch_custom_selector"
                android:track="@animator/custom_track_selector">
            </Switch>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/len_8"
                android:layout_marginEnd="@dimen/len_8"
