        android:layout_height="wrap_content">

        <!--Tollbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/len_40"
            android:paddingBottom="@dimen/len_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/label_register_welcome"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
            android:background="@drawable/bg_gradient_black"/>

        <com.jiuwfung.comp6239.widget.PortraitView
            android:id="@+id/im_register_portrait"
            android:layout_width="@dimen/len_92"
            android:layout_height="@dimen/len_92"
            android:layout_marginTop="32dp"
            android:src="@drawable/default_holder_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3">
        </com.jiuwfung.comp6239.widget.PortraitView>

        <TextView
            android:id="@+id/text_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/Label_register_portrait_tips"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_register_portrait">
        </TextView>

        <ImageView
            android:id="@+id/im_register_gender"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/sel_bg_sex"
            android:padding="5dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/text_port"
            app:layout_constraintEnd_toEndOf="@+id/im_register_portrait">
        </ImageView>


        <!--Email-->
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_account_input"
            android:orientation="vertical"
            android:paddingTop="@dimen/len_8"
            android:paddingBottom="@dimen/len_8"
